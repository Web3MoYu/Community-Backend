<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace= "com.shixi3.communitybackend.building.mapper.BuildingMapper">
    <select id="page" resultType="com.shixi3.communitybackend.building.entity.Building">
        select building_id,building_number,floor_num,house_num,create_time,update_time from building
        <where>
            <if test="number != null and number !='' ">
                building.building_number = #{number}
            </if>
        </where>
    </select>

</mapper >